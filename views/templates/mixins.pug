mixin player_search()
  script.
    $(document).ready(function () {
      $('#search-form').submit((e) => {
        e.preventDefault()
        var name = $('#player-name').val()
        window.location.href = '/ranks/player/' + encodeURIComponent(name)
      })
    })

mixin member(name, types, flag='DE', leader=false)
  .column.is-half-tablet.is-half-desktop.is-one-third-fullhd
    - size_class = leader == true ? 'is-one-third' : 'is-one-quarter'
    .box(class=size_class)
      article.media
        .media-left
          figure.image.is-96x96
            img(src=`/static/img/twflags/${flag}.png`, alt=flag, style='margin-top: 10px')
        .media-content
          .content
            h1= name
            if leader
              h3= types
            else
              h4= types

