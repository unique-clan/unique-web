extends layout

block content
  main
    br
    section.section
      .container
        .columns
            .column.nocontent.is-one-half(style='min-width: 0')
                .box
                    .content
                        h2.has-text-centered Applications
                        hr
                        each app in apps
                            .box
                                a.delete.is-pulled-right(href="/admin/delete/" + app.twName)
                                p #[strong Name]: #{app.twName}
                                p #[strong Country]: #{app.country}
                                p #[strong GameModes]: #{app.gameModes.join(", ")}
                                p #[strong Gender]: #{app.gender}
                                p #[strong Date]: #{app.createdAt}
                                p #[strong Presentation]: #[p(style='overflow-wrap: break-word') #{app.presentation}]

            .column.nocontent.is-one-half(style='min-width: 0')
                .box
                    .content
                        h2.has-text-centered Maps
                        hr
                        each map in maps
                            .box
                                a.delete.is-pulled-right(href="/admin/map/delete/" + map.fileName)
                                p #[strong Name]: #{map.fileName}
                                p #[strong Mappers]: #{map.mappers.join(", ")}
                                p #[strong Date]: #{map.createdAt}
                                a.button.is-link(href="/admin/map/download/" + map.fileName) Download

block scripts
  script(src="/static/js/adminlogin.js")
